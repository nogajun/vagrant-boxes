{
  "variables": {
      "debian_version": "rc1",
      "debian_codename": "buster"
  },
  "_comment": "http://cdimage.debian.org/debian-cd/{{user `debian_version`}}/amd64/iso-cd/debian-{{user `debian_version`}}-amd64-netinst.iso",
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Debian_64",
      "vm_name": "{{user `debian_codename`}}",
      "headless": true,
      "disk_size": 51200,
      "iso_url": "https://cdimage.debian.org/cdimage/buster_di_{{user `debian_version`}}/amd64/iso-cd/debian-buster-DI-{{user `debian_version`}}-amd64-netinst.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "1150d1fe8d7186e5dbfa2e3c300e7866337ef26fd86eb35d53c96ec7f5eea38b",
      "http_directory": "preseed",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "hostname={{ .Name }} <wait>",
        "domain=vagrantup.com <wait>",
        "frontend=noninteractive <wait>",
        "<enter><wait>"
      ],
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "sudo /sbin/shutdown -h now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/guestadditions.sh",
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "debian-{{user `debian_codename`}}-amd64.box"
    }
  ]
}

